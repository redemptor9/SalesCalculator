<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SalesCalculatorActivity"> <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item 1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edit_text_unit_price_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unit Price (e.g., 10.50)"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/edit_text_quantity_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity (e.g., 2)"
            android:inputType="number"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/text_view_item_total_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item 1 Total: 0.00"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item 2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edit_text_unit_price_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unit Price (e.g., 5.00)"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/edit_text_quantity_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity (e.g., 3)"
            android:inputType="number"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/text_view_item_total_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item 2 Total: 0.00"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item 3"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edit_text_unit_price_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unit Price (e.g., 20.00)"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/edit_text_quantity_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity (e.g., 1)"
            android:inputType="number"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/text_view_item_total_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item 3 Total: 0.00"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/button_calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate Total Sales"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:minHeight="48dp"/>

        <TextView
            android:id="@+id/text_view_grand_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grand Total: 0.00"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:paddingBottom="16dp"/>

    </LinearLayout>
</ScrollView>

</LinearLayout>